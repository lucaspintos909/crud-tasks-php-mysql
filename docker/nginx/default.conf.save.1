server{
    listen 80;
    server_name tareas.lucaspintos.tech;
    root /appdata/www/public;
    index index.php;

    location / {
        try_files $uri $uri/ =404;

    }

#   location ~ /.well-known/acme-challenge{
allow all;
   }

    location ~ \.php$ {
        fastcgi_pass docker-php-fmp:9000;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTPS off;
    }
    location ~ /\.ht {
        deny all;
    }
    error_log /var/log/nginx/nginx_error.log;
    access_log /var/log/nginx/nginx_access.log;

}
server {
     listen 443 ssl http2;
     server_name tareas.lucaspintos.tech;
     root /appdata/www/public;

     ssl on;
     server_tokens off;
     ssl_certificate /etc/nginx/ssl/live/centz.dimasrio.com/fullchain.pem;
     ssl_certificate_key /etc/nginx/ssl/live/centz.dimasrio.com/privkey.pem;
     ssl_dhparam /etc/nginx/dhparam/dhparam-2048.pem;
     
     ssl_buffer_size 8k;
     ssl_protocols TLSv1.2 TLSv1.1 TLSv1;
     ssl_prefer_server_ciphers on;
     ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;

    location / {
        index index.php;
    }

}
